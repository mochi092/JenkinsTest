<?xml version="1.0" encoding="UTF-8"?>
<project name="JenkinsTest" default="main" basedir=".">
	<property name="src.dir" value="src"/>
	<property name="build.dir" value="build"/>
	<property name="class.dir" value="${build.dir}/WEB-INF/classes"/>
	<property name="report.dir" value="report"/>

	<target name="main" depends="clean,compile"></target>
	<target name="clean">
		<delete dir="${build.dir}"></delete>
	</target>
	<target name="compile">
		<mkdir dir="${class.dir}"></mkdir>
		<javac srcdir="${src.dir}" destdir="${class.dir}" includeAntRuntime="true">
		</javac>
	</target>
	<target name="junit">
		<mkdir dir="${report.dir"></mkdir>
		<junit printsummary="yes" haltonfailure="no" includeAntRuntime="true">
			<formatter type="xml"></formatter>
			<batchtest form="yes" todir="${repord.dir}">
				<fileset dir="${class.dir}">
					<include name="**/*Test.java" />
				</fileset>
			</batchtest>
		</junit>
	</target>


</project>